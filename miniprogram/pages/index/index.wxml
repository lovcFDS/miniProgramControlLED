<!--index.wxml-->
<view class="container">
  <view class="page-head">
    <image class="images" src="../../images/SmilingPunpkins2022_ZH-CN6763384812_UHD.png" mode="widthFix"/>
  </view>
  <view class="page-body">
    <view style="display: flex;flex-direction: row;">
      <view class="ipaddress-input">
        <view class="input-text">请在此输入小灯的IP地址：</view>
        <input class="ip-input" type="digit" bindinput="ipInput" placeholder="  请输入IP地址" />
        <view style="display: flex;flex-direction: row;">
          <view style="width: 340;">{{response}}</view>
          <button class="ip-confirm" style="width: 160rpx; height: 70rpx;font-size: small;" bindtouchend="ipInputConfirm">确定</button>
        </view>
        
      </view>
      <view class="slider-view">
        <view class="slider-item-view">
          <slider-vertical 
            block-color="#ffffff"
            block-size="28"
            backgroundColor="#e9e9e9" 
            activeColor="#1aad19" 
            bindchange="slider1change"
            step="1"
            min="0" 
            max="255"
            value="0"
            disabled="{{false}}"
            show-value="{{true}}"
            ></slider-vertical>
          <view style="font-size: 32rpx;margin-left: 8rpx;">亮度</view>
        </view>
      </view>

    </view>
    <view  style="display: flex;flex-direction: row;">
      <view class="color-view">
        <view style="background:{{rgb}};width:350rpx;height:350rpx;border: 2px solid rgb(210, 212, 235); border-radius: 500px;" bindtap="toPick"></view>
        <color-picker bindchangeColor="pickColor" initColor="{{rgb}}" show="{{pick}}" />  
      </view>
      <view class="switch-view">
        <view class="switch-text">主开关</view>
        <switch class="switch" checked="{{power_switch}}" bindchange="powerSwitchChange"/>
        <view class="switch-text" >彩虹开关</view>
        <switch class="switch" checked="{{color_switch}}" bindchange="colorSwitchChange"/>
      </view>
    </view>
      
    
  </view>
</view>
